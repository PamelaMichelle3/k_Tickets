  <div id="container">
    <h2>Registro de Encomiendas</h2>
    <u><h3>Remitente</h3></u>
    
    <form action="#" method="post">
      <label>Id: </label>
      <input type="text" name="id_encomienda_remitente" value="{{id_encomienda_remitente}}" readonly  >

      <label id="name" for="nombre">Nombres Completos:</label> <br>
      <input type="text" id="nombre" name="nombre" value="{{nombres_encomienda_remitente}}" required>

      <label id="numeroce" for="apellido">Numero de Cedula:</label>
      <input type="text" id="cedula" name="cedula" value="{{cedula_encomienda_remitente}}" required>

      <label id="numetelef" for="apellido">Numero de Telefono:</label>
      <input type="text" id="telefono" name="telefono" value="{{telefono_encomienda_remitente}}" required>

        <br> <br>
      <label id="correoele" for="cedula">Correo Electronico:</label> <br>
      <input type="text" id="correo" name="correo" value="{{email_encomienda_remitente}}"  required>
       <br> <br>
    </form> <br>

    <u><h3>Destinatario</h3></u>

      <label id="name" for="nombre">Nombres Completos:</label> <br>
      <input type="text" id="nombre" name="nombre" value="{{nombres_encomienda_destinatario}}" required>

      <label id="numeroce" for="apellido">Numero de Cedula:</label>
      <input type="text" id="cedula" name="cedula" value="{{cedula_encomienda_destinatario}}" required>

      <label id="numetelef" for="apellido">Numero de Telefono:</label>
      <input type="text" id="telefono" name="telefono" value="{{telefono_encomienda_destinatario}}" required>

      <label id="calle" for="callepri">Calle Principal:</label> <br>
      <input type="text" id="callepri" name="callepri" value="{{calle_principal_encomienda_destinatario,}}" required>

      <label id="calles" for="calles">Calle Secundaria:</label>
      <input type="text" id="callese" name="callese" value="{{calle_secundaria}}" required>

      <label id="casa" for="numcasa">Numero de Casa:</label> 
      <input type="text" id="numcasa" name="numcasa"  value="{{numero_casa_encomienda_destinatario}}"  required>
        <br> <br>

      <u><h3>Datos de envio</h3></u>

      <label id="nameco" for="nomcoop">Nombre Cooperativa:</label> <br>
      <input type="text" id="nomcoop" name="nomcoop" value="{{nombres_cooperativa_detalle_encomienda}}" required>

      <label id="telfC" for="telefonocelu">Tamaño de encomienda:</label> <br>
      <input type="text" id="telefonoC" name="telefonocelu" value="{{tamano_detalle_encomienda}}" required>

      <label id="date" for="fecha">Fecha y hora de envio:</label> 
      <input type="datetime-local" id="fecha" name="fecha" value="{{fecha_envio_detalle_encomienda}}" required>

      <label id="numreg" for="registro">Numero de registro de transporte:</label>
      <input type="text" id="registro" name="registro" value="{{numero_registro_detalle_encomienda}}" required>

      <label id="peso" for="pesoe">Peso:</label>
      <input type="text" id="pesoe" name="pesoe" value="{{peso_detalle_encomienda}}" required>
        <br>
        <br>
      <input id="cancel" type="submit" value="Cancelar">
      <input id="save" type="submit" value="Registrar">
